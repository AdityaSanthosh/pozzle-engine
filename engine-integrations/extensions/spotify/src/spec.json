{
  "integrationSpecification": {
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Spotify Spec",
    "type": "object",
    "properties": {
      "credentials": {
        "refresh_token": {
          "type": "string",
          "title": "Refresh Token",
          "order": 0,
          "description": "Enter the Refresh Token",
          "secret": true
        },
        "client_id": {
          "type": "string",
          "title": "Client Id",
          "order": 0,
          "description": "Enter the Client Id",
          "secret": true
        },
        "client_secret": {
          "type": "string",
          "title": "Client Secret",
          "order": 0,
          "description": "Enter the Client Secret",
          "secret": true
        }
      }
    }
  },
  "authSpecification": {
    "auth_type": "oauth2.0",
    "oauth2Specification": {
      "rootObject": [ "credentials" ],
      "oauthFlowInitParameters": [
        [ "client_id" ],
        [ "client_secret" ]
      ],
      "oauthFlowOutputParameters": [ [ "access_token" ], [ "refresh_token" ] ]
    }
  }
}
