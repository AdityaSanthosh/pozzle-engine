{
  "name": "poozle-gateway",
  "version": "0.1.0",
  "description": "Poozle gateway",
  "license": "MIT",
  "scripts": {
    "build:script": "tsc src/index.ts",
    "run:script": "node src/index.js",
    "build": "mesh build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "mesh start",
    "start:dev": "mesh dev",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix"
  },
  "dependencies": {
    "@graphql-mesh/cli": "^0.82.20",
    "@graphql-mesh/transform-encapsulate": "^0.4.12",
    "@graphql-mesh/transform-naming-convention": "^0.13.12",
    "@graphql-mesh/transform-prefix": "^0.12.12",
    "@prisma/client": "^4.8.0",
    "dotenv": "^16.0.3",
    "graphql": "^16.6.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "@types/js-yaml": "^4.0.5",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-notice": "^0.9.10",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "prisma": "^4.8.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "typescript": "^4.9.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
